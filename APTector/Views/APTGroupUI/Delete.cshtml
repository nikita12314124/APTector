@model APTector.Models.APTGroup

@{
    ViewBag.Title = "Delete APT Group";
}

<h2>Delete APT Group</h2>

<form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
    <p>Are you sure you want to delete this group?</p>
    <p><strong>@Model.Name</strong> (ID=@Model.Id, Sector=@Model.Sector, Financial=@Model.IsFinancial)</p>
    <button type="submit">Delete</button> |
    <a asp-action="Index">Back</a>
</form>
