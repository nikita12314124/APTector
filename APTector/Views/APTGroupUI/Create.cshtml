@model APTector.Models.APTGroup
@{
    ViewBag.Title = "Создать группировку";
}

<h2>Создать группировку</h2>

<form method="post" asp-action="Create">
    <!-- Основные поля -->
    <div class="mb-3">
        <label class="form-label">Название группировки</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsFinancial" class="form-check-input" type="checkbox" />
        <label asp-for="IsFinancial" class="form-check-label">Финансовая группировка</label>
    </div>
    <div class="mb-3">
        <label class="form-label">Импакт</label>
        <input asp-for="Impact" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Краткое описание</label>
        <textarea asp-for="ShortDescription" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Регион работы</label>
        <input asp-for="Region" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Сфера (отрасль)</label>
        <input asp-for="Sector" class="form-control" />
    </div>

    <!-- Новые поля -->
    <div class="mb-3">
        <label class="form-label">Мотивация</label>
        <input asp-for="Motivation" class="form-control" placeholder="Например, Финансовая выгода, Шпионаж, Хактивизм" />
    </div>
    <div class="mb-3">
        <label class="form-label">Альтернативные названия</label>
        <input asp-for="Aliases" class="form-control" placeholder="Через запятую" />
    </div>
    <div class="mb-3">
        <label class="form-label">Активна с (дата или год)</label>
        <!-- Если предпочитаете использовать тип date, убедитесь, что модель поддерживает нужный формат -->
        <input asp-for="ActiveSince" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Целевые отрасли</label>
        <input asp-for="TargetIndustries" class="form-control" placeholder="Например, Государственный сектор, Финансы, СМИ" />
    </div>
    <div class="mb-3">
        <label class="form-label">Географический фокус</label>
        <input asp-for="GeographicalFocus" class="form-control" placeholder="Например, Россия, СНГ" />
    </div>
    <div class="mb-3">
        <label class="form-label">Ключевые кампании</label>
        <textarea asp-for="NotableCampaigns" class="form-control" placeholder="Краткое описание наиболее значимых кампаний"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Уровень угрозы (от 1 до 10)</label>
        <input asp-for="ThreatLevel" type="number" step="0.1" class="form-control" placeholder="Например, 7.5" />
    </div>
    <div class="mb-3">
        <label class="form-label">Уверенность в атрибуции (0-1 или %)</label>
        <input asp-for="AttributionConfidence" type="number" step="0.01" class="form-control" placeholder="Например, 0.85" />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
